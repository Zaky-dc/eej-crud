<%- include('layout/headerWithoutNavbar') %>

<body>
    <div class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px; margin-top: 20px;margin-bottom: 20px;">
            <h1 class="h4 text-center mb-4">Adicionar Novo EEG</h1>
            <form action="/update/<%-updatedata._id %>" method="post">
                <div class="form-group">
                    <label for="paciente">Paciente</label>
                    <input type="text" id="paciente" name="paciente" class="form-control" placeholder="Nome do Paciente" value="<%- updatedata.paciente %>" required>
                </div>
                <div class="form-group">
                    <label for="contacto">Contacto</label>
                    <input type="text" id="contacto" name="contacto" class="form-control" placeholder="Contacto do Paciente" value="<%- updatedata.contacto %>" required>
                </div>
                <div class="form-group">
                    <label for="tecnico">Técnico</label>
                    <input type="text" id="tecnico" name="tecnico" class="form-control" placeholder="Nome do Técnico"value="<%- updatedata.tecnico %>" required>
                </div>
                <div class="form-group">
                    <label for="neurologista">Neurologista</label>
                    <input type="text" id="neurologista" name="neurologista" class="form-control" placeholder="Nome do Neurologista" value="<%- updatedata.neurologista %>" required>
                </div>
                <div class="form-group">
                    <label for="entrega">Data de Entrega</label>
                    <input type="date" id="entrega" name="entrega" class="form-control" lang="pt-BR" min="<%= feitoDate %>"
                           value="<%- updatedata.entrega.toISOString().slice(0, 10) %>" required>
                </div>
                
                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" name="status" class="form-control" required>
                        <option value="Entregue" <%- updatedata.status === 'Entregue' ? 'selected' : '' %>>Entregue</option>
                        <option value="Pendente" <%- updatedata.status === 'Pendente' ? 'selected' : '' %>>Pendente</option>
                        <option value="Cancelado" <%- updatedata.status === 'Cancelado' ? 'selected' : '' %>>Cancelado</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>


<%- include('layout/cleanfooter') %>